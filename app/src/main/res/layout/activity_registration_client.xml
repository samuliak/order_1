        <CheckBox
            android:id="@+id/komp11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comp11"/>
        <CheckBox
            android:id="@+id/komp12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comp12"/>
        <CheckBox
            android:id="@+id/komp13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comp13"/>
        <CheckBox
            android:id="@+id/komp14"
            android:layout_width="match_parent"
