<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.samuliak.psychogram">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.main.authornization.SelectTypeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.main.authornization.AuthorizationActivity" />
        <activity android:name=".Activity.main.registration.RegistrationDoctorActivity" />
        <activity android:name=".Activity.main.registration.RegistrationClientActivity" />
        <activity android:name=".Activity.main.MainDoctorActivity" />
        <activity android:name=".Activity.main.MainClientActivity" />
        <activity android:name=".Activity.main.menu.doctor_menu_items.ExClientsActivity"
            android:label="@string/online_help"/>
        <activity android:name=".Activity.main.menu.common_items.ProfileDoctorActivity" />
        <activity
            android:name=".Activity.main.menu.common_items.DialogActivity"
            android:label="@string/online_help" />
        <activity android:name=".Activity.main.menu.common_items.CommunicationActivity" />
        <activity
            android:name=".Activity.main.menu.doctor_menu_items.FriendActivity"
            android:label="@string/title_activity_friend"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.main.menu.doctor_menu_items.MyClientsActivity"
            android:label="@string/title_activity_my_client"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>